{
  "extends": "../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "*"
      ],
    },
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ]
}